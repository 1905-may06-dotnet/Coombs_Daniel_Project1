@model PizzaBoxClient.Models.CustomerModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "CreateAccount";
}

@ViewBag.Title = "CreateAccount";

<h1>CreateAccount</h1>
<hr />
<p>@ViewBag.Message</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAccount">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <span style="color:blue">*</span>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReEnterPassword" class="control-label"></label>
                <span style="color:blue">*</span>
                <input type="password" asp-for="ReEnterPassword" class="form-control" />
                <span asp-validation-for="ReEnterPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Add1" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="Add1" class="form-control" />
                <span asp-validation-for="Add1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Add2" class="control-label"></label>
                <input asp-for="Add2" class="form-control" />
                <span asp-validation-for="Add2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <span style="color:blue">*</span>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LogIn">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
