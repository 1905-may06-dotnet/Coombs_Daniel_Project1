@model PizzaBoxClient.Models.OrderHistory

@{
    Layout = "_LayoutAfter";
    ViewData["Title"] = "ViewRestaurantData";
}

<h1>Select Location and Data</h1>

<hr />
@ViewData["Text"]
<div class="row">
    <form asp-action="ViewRestaurantDat">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <h4>Location</h4>
            @Html.DropDownList("Location", new List<SelectListItem> {
            new SelectListItem { Text = "Arlington", Value = "1", Selected = true },
            new SelectListItem { Text = "Dallas", Value = "2", Selected = false },
            new SelectListItem {Text = "Fort Worth", Value = "3", Selected = false},
            new SelectListItem {Text = "Houston", Value = "4", Selected = false},
            new SelectListItem {Text = "Austin", Value = "5", Selected = false},
            })
        </div>
        <div class="form-group">
            <h4>Data</h4>
            @Html.DropDownList("Data", new List<SelectListItem> {
            new SelectListItem { Text = "Customers", Value = "1", Selected = true },
            new SelectListItem { Text = "Orders and Sales", Value = "2", Selected = false },
            new SelectListItem { Text = "Inventory", Value = "Large", Selected = false },
            })
        </div>
        <div class="form-group">
            <input type="submit" value="View Data" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Locations">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}